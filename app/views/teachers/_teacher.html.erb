<div id="<%= dom_id teacher %>">
  <p>
    <strong>Name:</strong>
    <%= teacher.name %>
  </p>

  <p>
    <strong>Department:</strong>
    <%= teacher.department %>
  </p>

  <p>
    <strong>Per unit rate:</strong>
    <%= teacher.per_unit_rate %>
  </p>

  <p>
    <strong>Avatar:</strong>
    <%= image_tag teacher.avatar %>
  </p>

  <p>
    <% teacher&.id_cards&.map do |id| %>
      <p<%= id.filename%></p>
    <% end %>
  </p>

</div>
